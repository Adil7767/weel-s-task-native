{
  "name": "task-monorepo",
  "private": true,
  "scripts": {
    "dev": "npm run dev:backend",
    "dev:backend": "npm --prefix backend run dev",
    "dev:frontend": "npm --prefix frontend run start",
    "dev:all": "npm-run-all --parallel dev:backend dev:frontend",
    "build": "npm run build:backend",
    "build:backend": "npm --prefix backend run build",
    "seed": "DATABASE_URL=postgres://task:task@localhost:5432/task npm run build:backend && DATABASE_URL=postgres://task:task@localhost:5432/task npm --prefix backend run seed",
    "start": "npm-run-all --parallel start:backend start:frontend",
    "start:backend": "npm --prefix backend run start",
    "start:frontend": "npm --prefix frontend run start",
    "test": "npm run test:backend",
    "test:backend": "npm --prefix backend run test"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
